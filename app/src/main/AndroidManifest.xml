<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.corridafacil">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CorridaFacil">
        <activity
            android:name=".authenticationFirebase.ui.ForgoutPassword"
            android:exported="false" />
        <activity
            android:name=".authenticationFirebase.ui.Login"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.CorridaFacil.NoActionBar"
            tools:ignore="AppLinkUrlError">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".authenticationFirebase.ui.register.FormAddEmail"
            android:exported="false"
            android:label="@string/title_activity_form_add_email"
            android:theme="@style/Theme.CorridaFacil" />
        <activity
            android:name=".authenticationFirebase.ui.register.FormAddCodeSms"
            android:exported="false"
            android:label="@string/title_activity_form_add_code_sms"
            android:theme="@style/Theme.CorridaFacil" />
        <activity
            android:name=".authenticationFirebase.ui.register.FormAddPhone"
            android:exported="false"
            android:label="@string/title_activity_form_add_phone"
            android:theme="@style/Theme.CorridaFacil" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyA9RZYO-8Ji-TfZEI4x-ekpTKeuM7MKQ4g" />

        <activity
            android:name=".mapa.ui.MapsActivity"
            android:label="@string/title_activity_maps"
            android:theme="@style/Theme.CorridaFacil.NoActionBar" />
        <activity android:name=".MainActivity" />

        <service
            android:name=".Services.FirebaseMenssaging.FirebaseMenssagingServices"
            android:exported="false"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>